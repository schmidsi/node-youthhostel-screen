extends _layout


block content
    .row
        .small-12.columns
            h1 New Screen

    form
        .row
            .small-12.columns
                label Name
                    input(type='text' placeholder='Name for the screen')
        .row
            .small-12.columns
                label Description
                    textarea(placeholder='Description for the screen (where is it, whats the purpose, etc.)')

        .row
            .small-12.columns
                label(for='location') Location (used for weather forecast)
            .small-4.columns
                input(type='text' id='location' placeholder='Enter city')
                label Longitude
                    input(type='text' name='lng' disabled)
                label Latitude
                    input(type='text' name='lat' disabled)

            .small-8.columns
                #location-map
